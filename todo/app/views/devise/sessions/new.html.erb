<h3 class="center-align">Iniciar Sesión</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="input-field col s12 l5 offset-l4">
    <i class="material-icons prefix">email</i>
    <%= f.email_field :email, autofocus: true, class:"validate", autocomplete:"off", id:"icon_prefix" %>
    <label for="icon_prefix" class="active">Correo</label>
    </div>    
  </div>

  <div class="row">
    <div class="input-field col s12 l5 offset-l4">
      <i class="material-icons prefix">https</i>
      <%= f.password_field :password, autocomplete: "off", class:"validate", id:"icon_prefix" %>
      <label for="icon_prefix" class="active">Contraseña</label>
    </div>    
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="input-field col s15 l5 offset-l4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Recordarme' %>
    </div>
  <% end -%>
    
  </div>

  <div class="row">
    <div class="col s1 l5 offset-l4">
      <br />  
      <%= f.submit "Entrar", class:"btn" %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>

